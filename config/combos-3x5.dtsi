compatible = "zmk,combos";

#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, TERM) \
        combo_##NAME { \
            timeout-ms = <TERM>; \
            bindings = <BINDINGS>; \
            key-positions = <KEYPOS>; \
            layers = <LAYERS>; \
        };

COMBO(capsword,  &caps_word,    2  7, DEF, 50)
COMBO(hyper,     &sk HYPER,     1  2, DEF NUM, 50)
COMBO(meh,       &sk MEH,       7  8, DEF, 50)

COMBO(vimac,     &kp VIMAC,     2  6, DEF, 50)
COMBO(esc,       &kp ESC,      21 22, DEF, 50)
COMBO(esc2,      &kp ESC,      22 23, DEF, 50)
COMBO(alfrLower, &kp ALFR,     14 15, DEF, 50)
COMBO(alfrInner, &kp ALFR,     23 26, DEF, 50)
COMBO(cxts,      &kp CTXS,     22 27, DEF, 50)

COMBO(lock,      &to LCK,        6 21, DEF, 50)
COMBO(unlock,    &to DEF,        7 21, LCK, 50)
